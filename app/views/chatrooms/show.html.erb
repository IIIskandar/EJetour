<p class="col-md">
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<li class="col-md" type="none">
	<div data-behavior="messages" data-chatroom-id="<%= @chatroom.id %>">
		<% @messages.each do |message| %>
			<%= render message %>
		<%end%>	
	</div>
</li>

<%= form_for [@chatroom, Message.new] do |f| %>
	<%= f.text_area :body, rows: 1, class: "form-control", autufocus: true%>
<%end%>
