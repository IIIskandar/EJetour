<% @articles.each do |article| %>
	<h1 class="be-blue"><%= link_to article.title, article%></h1> 
	<div><h4 class ="be-blue">Informacion: </h4><%= article.body%></div>
	<% if current_user %>
	<div><h4 class ="be-blue">Autor: </h4><%=current_user.email%></div>
	<%end%>
	<div><h4 class ="be-blue">Localizacion: </h4><%= article.location %> - <%= link_to "Eliminar", article, method: :delete, class:"botton-blue"%>
	</div>
	<div>___________________________________________________________</div>

<%end%>